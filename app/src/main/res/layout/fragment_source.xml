<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/CardView"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="14dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bevel_background"
        android:padding="32dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorMonoDetailAlt"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivFragImage"
                android:layout_width="match_parent"
                android:layout_height="238dp"
                android:layout_weight="1"
                android:background="@drawable/two_tone_cat"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tvFragTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kate News"
                android:textColor="#550000"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvFragDescritpion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Your trusted source for breaking kitty news, analysis, exclusive interviews, headlines, and videos at meow.com."
                android:textColor="#550000"
                android:textSize="24sp" />

        </LinearLayout>
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>